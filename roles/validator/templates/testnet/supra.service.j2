[Unit]
Description=Supra Validator

[Service]
User={{ service_identifier }}
Group={{ service_identifier }}
EnvironmentFile={{ validator_env_dir }}/normal_env_var
EnvironmentFile={{ validator_env_dir }}/secret_env_var
WorkingDirectory={{ validator_config_dir }}
ExecStart={{ validator_bin_dir }}/{{ service_identifier }} node smr run -f
Restart=always
RestartSec=4
LimitNOFILE=65536
StandardError=inherit

[Install]
WantedBy=multi-user.target